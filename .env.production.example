# =============================================================================
# AccountSafe - Production Environment Configuration
# =============================================================================
# IMPORTANT: Copy this file to .env and fill in ALL values
# NEVER commit .env to version control!
#
# Generate SECRET_KEY:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# =============================================================================

# =============================================================================
# DOMAIN CONFIGURATION (Required)
# =============================================================================
DOMAIN=accountsafe.yourdomain.com

# =============================================================================
# DJANGO SETTINGS (Required)
# =============================================================================
# Generate a secure 50+ character random string
SECRET_KEY=your-super-secret-key-generate-this-with-python

# Never set to True in production
DEBUG=False

# =============================================================================
# DATABASE CREDENTIALS (Required)
# =============================================================================
DB_NAME=accountsafe
DB_USER=accountsafe_user
DB_PASSWORD=your-very-strong-database-password-here

# =============================================================================
# EMAIL CONFIGURATION (Required for password reset, etc.)
# =============================================================================
# Gmail SMTP - Generate app password at: https://myaccount.google.com/apppasswords
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-16-char-app-password
DEFAULT_FROM_EMAIL=AccountSafe <your-email@gmail.com>

# =============================================================================
# CLOUDFLARE TURNSTILE (Required for bot protection)
# =============================================================================
# Get keys from: https://dash.cloudflare.com/ -> Turnstile
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# =============================================================================
# PERFORMANCE TUNING (Optional)
# =============================================================================
# Gunicorn workers: (2 x CPU cores) + 1
GUNICORN_WORKERS=3

# =============================================================================
# SSL/CERTBOT (Set in init-letsencrypt.sh, not here)
# =============================================================================
# SSL_EMAIL=admin@yourdomain.com
